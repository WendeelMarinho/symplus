<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Application while the process is starting when the OS's Dark Mode setting is off -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light">
        <!-- Show a splash screen on the activity. Automatically removed when
             the Flutter engine draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <!-- Theme applied to the Android Application as soon as it is started
         after the launch screen is shown. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>

